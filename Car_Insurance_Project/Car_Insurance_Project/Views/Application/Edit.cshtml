                           new SelectListItem {Text = "Outlander"},
                       }, "Select Model")
            @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Dui, "Have you ever had a DUI?", htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-10">
            Yes
            @Html.RadioButtonFor(model => model.Dui, "Yes")
            No
            @Html.RadioButtonFor(model => model.Dui, "No")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Coverage, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Full Coverage
            @Html.RadioButtonFor(model => model.Coverage, "Full Coverage")
            Liability
            @Html.RadioButtonFor(model => model.Coverage, "Liability")
        </div>
    </div>

