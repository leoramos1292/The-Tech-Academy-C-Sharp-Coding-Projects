        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Model", new List<SelectListItem>
                       {
                           new SelectListItem {Text = "911 Carrera"},
                           new SelectListItem {Text = "Taycan"},
                           new SelectListItem {Text = "i8"},
                           new SelectListItem {Text = "Series 2"},
                           new SelectListItem {Text = "Challenger"},
                           new SelectListItem {Text = "Charger"},
                           new SelectListItem {Text = "WRX"},
